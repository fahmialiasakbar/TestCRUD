<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:background="@android:color/holo_blue_bright"
    tools:context="id.sch.smktelkom_mlg.project2.xirpl11126.projectandroid.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:padding="10dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="31dp">

        <Button
            android:id="@+id/Thoharoh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/appbar_padding_top"
            android:background="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:foregroundTint="@android:color/background_light"
            android:text="Thoharoh"
            android:textColor="@color/cardview_light_background"
            android:textColorLink="@color/colorPrimary"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="-38dp" />

        <Button
            android:id="@+id/Najis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/appbar_padding_top"
            android:background="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:foregroundTint="@android:color/background_light"
            android:text="Najis"
            android:textColor="@color/cardview_light_background"
            android:textColorLink="@color/colorPrimary" />

        <Button
            android:id="@+id/Wudhu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/appbar_padding_top"
            android:background="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:foregroundTint="@android:color/background_light"
            android:text="Wudhu"
            android:textColor="@color/cardview_light_background"
            android:textColorLink="@color/colorPrimary"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="96dp" />

        <Button
            android:id="@+id/Tayamum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/appbar_padding_top"
            android:background="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:foregroundTint="@android:color/background_light"
            android:text="Tayamum"
            android:textColor="@color/cardview_light_background"
            android:textColorLink="@color/colorPrimary" />

        <Button
            android:id="@+id/Siwak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/appbar_padding_top"
            android:background="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:foregroundTint="@android:color/background_light"
            android:text="Siwak"
            android:textColor="@color/cardview_light_background"
            android:textColorLink="@color/colorPrimary" />

        <Button
            android:id="@+id/Mandi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/appbar_padding_top"
            android:background="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:foregroundTint="@android:color/background_light"
            android:text="Mandi"
            android:textColor="@color/cardview_light_background"
            android:textColorLink="@color/colorPrimary" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
